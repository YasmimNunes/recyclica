@model Recyclica.Areas.OperationsManager.Controllers.UserViewModel

@{
    ViewData["Title"] = "Tela Editar Usuários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1>Editar Usuário</h1>
    <br>
</div>

<div class="d-flex justify-content-center">
    <div class="card col-md-8">
        <div class="card-body">
            <form asp-action="Editar" method="post" id="editForm">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="mb-2 row">
                    <label asp-for="FullName" class="col-sm-3 col-form-label">Nome Completo</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="mb-2 row">
                    <label asp-for="Email" class="col-sm-3 col-form-label">Email</label>
                    <input asp-for="Email" class="form-control" disabled readonly />
                </div>
                <div class="mb-2 row">
                    <label asp-for="RoleName" class="col-sm-3 col-form-label">Cargo</label>
                    <input asp-for="RoleName" class="form-control" disabled readonly />
                </div>
                <div class="mb-2 row">
                    <label asp-for="PhoneNumber" class="col-sm-3 col-form-label">Telefone</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <br>
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#confirmSaveModal">
                    Salvar Alterações
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>

            <!-- Modal de confirmação -->
            <div class="modal fade" id="confirmSaveModal" tabindex="-1" aria-labelledby="confirmSaveModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="confirmSaveModalLabel">Confirmação de Alteração</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Tem certeza de que deseja salvar as alterações para o usuário?
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-success" form="editForm">Sim, salvar</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>