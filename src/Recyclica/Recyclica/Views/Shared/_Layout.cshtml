<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Recyclica</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap5.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/LogoRecyclicaNavLogo.svg" width="130" alt="Logo Recyclica Navbar" />
                </a>
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <div class="vr" style="width: 4px; color: #fff; opacity: 0.9; border-radius: 3px;"></div>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link active" asp-area="OperationsManager" asp-controller="RoleApproval" asp-action="Index">Usuários</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-area="Produtos" asp-controller="Produtos" asp-action="Index">Produtos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-area="Clientes" asp-controller="Clientes" asp-action="Index">Clientes</a>
                            </li>
                            <li class="nav-item dropdown" data-bs-theme="light">
                                <a class="nav-link dropdown-toggle active" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Materiais
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-area="MateriaPrima" asp-controller="MateriaPrima" asp-action="Index">Matéria Prima</a></li>
                                    <li><a class="dropdown-item" asp-area="MateriaPrima" asp-controller="MateriaPrima" asp-action="MaterialCadastrado">Materiais Cadastrados</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-primary text-white mt-auto">
        <div class="container">
            &copy; 2024 - Recyclica - <a class="text-white" href="https://pucminas.br">PUC - Minas</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
